@{
    ViewData["Title"] = "Characters";
}

<div class="row justify-content-md-center">
    <div class="col-md-8 col-lg-7 col-xl-6">
        <ul class="list-group">
            <li class="list-group-item active ">
                User Name
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-3" style="min-width: 60px;">
                        <img src="@Url.Content("~/images/avatars/sir_deevis2.jpg")"
                             class="character-avatar" alt="avatar">
                    </div>
                    <div class="col-5 character-info">
                        <p>Name: Deevis</p>
                        <p>Level: 17</p>
                    </div >
                    <div class="col-4 character-btns">
                        <button  type="button" class="btn btn-primary">Play</button>
                        <button  type="button" class="btn btn-primary">Manage</button>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-3" style="min-width: 60px;">
                        <img src="@Url.Content("~/images/avatars/sir_deevis3.jpg")"
                             class="character-avatar" alt="avatar">
                    </div>
                    <div class="col-5 character-info">
                        <p>Name: Deevis</p>
                        <p>Level: 17</p>
                    </div>
                    <div class="col-4 character-btns">
                        <button type="button" class="btn btn-primary">Play</button>
                        <button type="button" class="btn btn-primary">Manage</button>
                    </div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col-8 character-info">
                        <p>Create new character...</p>
                    </div>
                    <div class="col-4 character-btns">
                        <button type="button" class="btn btn-primary">Create</button>
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>