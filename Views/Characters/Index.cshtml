@model IEnumerable<DivineMonad.Models.Character>

@{
    ViewData["Title"] = "Characters";
}

<div class="row justify-content-md-center">
    <div class="col-8">
        <ul class="list-group">
            <li class="list-group-item active ">
                @ViewBag.userName - Characters List
            </li>
            @foreach (Character item in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-3" style="min-width: 60px;">
                            <img src="@Url.Content("~/images/avatars/sir_deevis2.jpg")"
                                 class="character-avatar" alt="avatar">
                        </div>
                        <div class="col-5 character-info">
                            <p>Name: @item.Name</p>
                            <p>Level: @item.CBStats.Level</p>
                        </div>
                        <div class="col-4 character-btns">
                            <form asp-controller="Game" asp-action="Index">
                                <input type="hidden" asp-for="@item.ID" name="cId"  />
                                <input type="submit" value="Play" class="btn btn-primary" />
                            </form>
                            @*<input type="button" value="Play" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Game", new { id = item.ID })'"  />*@
                            <input type="button" value="Manage" class="btn btn-primary"/>
                        </div>
                    </div>
                </li>
            }
            <li class="list-group-item">
                <div class="row">
                    <div class="col-8 character-info">
                        <p>Create new character...</p>
                    </div>
                    <div class="col-4 character-btns">
                        <input type="button" value="Manage" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Characters")'" />
                    </div>
                </div>
            </li>
        </ul>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}