@{
    ViewData["Title"] = "Home Page";
}

<div class="row text-center" style="margin-top: -40px;">
    <div class="col-12 mt-4">
        <h2 class="display-4">Welcome</h2>
        <div class="big-border">
            <div id="x" class="carousel slide" data-ride="carousel" style="padding: 6px;">
                <ol class="carousel-indicators">
                    <li data-target="#x" data-slide-to="0" class="active"></li>
                    <li data-target="#x" data-slide-to="1"></li>
                    <li data-target="#x" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/images/gui/fight.png")" style="width: 65%!important;" alt="fight">
                        <div class="carousel-caption d-none d-md-block slide-font small-border">
                            <h4>Fight with monsters!</h4>
                            <p>Beat monsters, get gold and items from them.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/gui/character.png")" style="width: 65%!important;" alt="character">
                        <div class="carousel-caption d-none d-md-block slide-font small-border">
                            <h4>Develop Your character!</h4>
                            <p>Gain experience and increase the level of your character.</p>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/images/gui/equipment.png")" style="width: 65%!important;" alt="equipment">
                        <div class="carousel-caption d-none d-md-block slide-font small-border">
                            <h4>Get better and better equipment!</h4>
                            <p>Four ranks of items! Normal, unique, heroic and legendary!</p>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#x" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#x" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <input type="button" value="PLAY NOW!" class="btn-big" onclick="location.href='@Url.Action("Create", "Characters")'" />
    </div>
</div>
