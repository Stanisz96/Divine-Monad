@model DivineMonad.Models.CharacterBaseStats

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Character Base Stats</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Characters" asp-action="Details"
               asp-route-id="@ViewData["CharacterId"]">
                @ViewData["CharacterName"]
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Experience):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Experience)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Gold)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gold)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BpSlots)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BpSlots)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stamina):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stamina)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Strength):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Strength)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Agility):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Agility)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Dexterity):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dexterity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Luck):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Luck)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StatsPoints):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StatsPoints)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a href='javascript:history.go(-1)'>Back</a>
</div>
