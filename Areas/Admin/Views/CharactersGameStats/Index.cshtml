@model IEnumerable<DivineMonad.Models.GameStats>

@{
    ViewData["Title"] = "Characters Game Statistics";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Characters Game Statistics</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="horizontal-scroll">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MonsterKills)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CollectedGold)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DeathsNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LostFights)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.WinFights)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DrawFights)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LootedNormal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LootedUnique)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LootedHeroic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LootedLegendary)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MonsterKills)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CollectedGold)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeathsNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LostFights)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WinFights)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DrawFights)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LootedNormal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LootedUnique)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LootedHeroic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LootedLegendary)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a asp-area="Admin" asp-controller="Home" asp-action="Index">Back to Admin home page</a>
