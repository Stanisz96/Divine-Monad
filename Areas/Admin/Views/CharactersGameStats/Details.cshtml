@model DivineMonad.Models.GameStats

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Character Game Statistics</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Character Name:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Characters" asp-action="Details"
               asp-route-id="@ViewData["CharacterId"]">
                @ViewData["CharacterName"]
            </a>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MonsterKills):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MonsterKills)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CollectedGold):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CollectedGold)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DeathsNumber):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DeathsNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LostFights):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LostFights)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WinFights):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WinFights)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DrawFights):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DrawFights)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootedNormal):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootedNormal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootedUnique):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootedUnique)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootedHeroic):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootedHeroic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LootedLegendary):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LootedLegendary)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a href='javascript:history.go(-1)'>Back</a>
</div>
