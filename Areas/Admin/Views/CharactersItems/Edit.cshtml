@model DivineMonad.Models.CharacterItems

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Character Items</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="CharacterId" class="control-label">Character</label>
                <select asp-for="CharacterId" class="form-control" asp-items="ViewBag.Characters"></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemId" class="control-label">Item</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.Items"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsEquipped" /> @Html.DisplayNameFor(model => model.IsEquipped)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
