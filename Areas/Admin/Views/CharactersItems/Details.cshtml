@model DivineMonad.Models.CharacterItems

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Character Items</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Character ID:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Characters" asp-action="Details" asp-route-id="@Model.CharacterId">
                @Html.DisplayFor(model => model.CharacterId)
            </a>
        </dd>
        <dt class="col-sm-2">
            Item ID:
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Items" asp-action="Details" asp-route-id="@Model.ItemId">
                @Html.DisplayFor(model => model.ItemId)
            </a>
        </dd>
        <dt class="col-sm-2">
            IsEquipped:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsEquipped)
        </dd>
        <dt class="col-sm-2">
            BackpackId:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BpSlotId)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a href='javascript:history.go(-1)'>Back</a>
</div>