@model IEnumerable<DivineMonad.Models.ItemCategory>

@{
    ViewData["Title"] = "Items Categories";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Items Categories</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Armor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boots)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gloves)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Helmet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon1H)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weapon2H)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shield)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsConsumable)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Armor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arrow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Boots)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gloves)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Helmet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon1H)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weapon2H)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Shield)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsConsumable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a asp-controller="Home" asp-action="Index">Back to Admin home page</a>
