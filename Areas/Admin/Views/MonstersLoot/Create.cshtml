@model DivineMonad.Models.MonsterLootViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>Monster Loot</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MonsterId" class="control-label">Character</label>
                <select asp-for="MonsterId" class="form-control" asp-items="ViewBag.Monsters"></select>
            </div>
            <div class="form-group">
@*                <label asp-for="ItemId" class="control-label">Item</label>
                <select asp-for="ItemId" class="form-control" asp-items="ViewBag.Items"></select>*@
                @foreach (var item in ViewBag.Items)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox"
                                   name="ItemIdList"
                                   value="@item.Value"
                                   /> @item.Text
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
